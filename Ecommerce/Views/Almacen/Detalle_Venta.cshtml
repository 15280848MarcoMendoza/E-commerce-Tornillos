@model IEnumerable<Ecommerce.Models.DetalleVenta>


@{
    ViewBag.Title = "Detalle_Venta";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}



<h2>Contactar paqueteria menú</h2>
<h6>Seleccionar orden de venta</h6>
@using (@Html.BeginForm("Detalle_Venta", "Almacen", FormMethod.Get))
{
    <b> Buscar por:</b>
    @Html.RadioButton("searchBy", "Nombre", true, new { htmlAttributes = new { @class = "form-check-input" } }) <text>
        Nombre</text>
    @Html.RadioButton("searchBy", "Id", new { htmlAttributes = new { @class = "form-check-input" } }) <text>
        Id</text>
    <br />
    @Html.TextBox("search", ViewBag.CurrentFilter as string)
    
    <input type="submit" value="Buscar" class="btn btn-info" />
}

<table class="table">
    <tr>
        <th>
            Id de orden de venta
        </th>
        <th>
            Nombre de orden de venta
        </th>
        <th>
            Fecha
        </th>
        <th>
            Id Cliente
        </th>
        <th>
            Cliente
        </th>
        <th>
            Direccion
        </th>
        <th>
            Producto
        </th>
        <th>
            Cantidad
        </th>
       
        <th>

        </th>

    </tr>
    @foreach (var item in Model)
    {

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ventas.FechaVenta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ventas.Cliente.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ventas.Cliente.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ventas.Cliente.Calle),

            @Html.DisplayFor(modelItem => item.Ventas.Cliente.Municipio),

            @Html.DisplayFor(modelItem => item.Ventas.Cliente.Estado)
        </td>
        <td>

            @Html.DisplayFor(modelItem => item.Producto.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
     
        <td>


            @Html.ActionLink("Contactar paqueteria", "EditMen", new { id = item.Id }, new { @class = "btn btn-outline-warning" })

        </td>
    </tr>


    }
</table>
<br />



