@using Ecommerce.Models

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Detalles de compra</h2>

<form>
    <p>
        <button class="btn btn-light" formaction="/Finanzas/AprobacionCompras
                ">
            Regresar al historial
        </button>
    </p>
</form>
<table class="table">
    <tr>
        <th>
            Producto
        </th>
        <th>
            Cantidad
        </th>
        <th>
            Subtotal
        </th>
        <th>
            Fecha de vencimiento
        </th>
        <th>
            Razon
        </th>
        <th>
            Acciones
        </th>

    </tr>

    @foreach (DetalleCompras item in ViewBag.AprobacionCompras)
    {
        <tr>
            <td>
                @item.Productos.Nombre
            </td>
            <td>
                @item.Cantidad
            </td>

            <td>
                @item.SubTotal
            </td>
            <td>
                @item.Fecha_vencimiento
            </td>
            <td>
                Nos quedamos sin stock
            </td>
            <td>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Aprobar
                </button>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal1">
                    Rechazar
                </button>


                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Recibo de Compra</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                La compra ha sido aprobada y se notificará al departamento de compras. <br /> <br />
                                Gracias!
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Recibo de Compra</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                La compra ha sido rechazada y se notificará al departamento de compras. <br /> <br />
                                Gracias!
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar </button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>

